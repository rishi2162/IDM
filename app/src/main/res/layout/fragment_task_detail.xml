<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtBack"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:text="@string/tasks"
        android:textAllCaps="false"
        android:textColor="@color/incture_theme"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="19dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:text="Demand ID:"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="19dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="5dp"
                android:text="IDM0001"
                android:textColor="@color/black"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/tv3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="19dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="5dp"
                android:text="Requester:"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="19dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="5dp"
                android:text="Jyotiranjan Dash"
                android:textColor="@color/black"
                android:textStyle="normal" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/card1"
                android:layout_width="80dp"
                android:layout_height="99dp"
                android:layout_marginEnd="24dp"
                app:cardBackgroundColor="@color/card1_color"
                app:cardCornerRadius="10dp"
                app:cardElevation="15dp"
                app:cardMaxElevation="15dp">

                <TextView
                    android:id="@+id/tvCard1"
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:paddingTop="21dp"
                    android:text="4"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="34sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvCard2"
                    android:layout_width="match_parent"
                    android:layout_height="27dp"
                    android:layout_marginTop="72dp"
                    android:text="Requested"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card2"
                android:layout_width="80dp"
                android:layout_height="99dp"
                android:layout_marginEnd="20dp"
                app:cardBackgroundColor="@color/card2_color"
                app:cardCornerRadius="10dp"
                app:cardElevation="15dp"
                app:cardMaxElevation="15dp">

                <TextView
                    android:id="@+id/tvCard3"
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:paddingTop="21dp"
                    android:text="2"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="34sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvCard4"
                    android:layout_width="match_parent"
                    android:layout_height="27dp"
                    android:layout_marginTop="72dp"
                    android:text="Fulfilled"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="19dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="10dp"
        android:text="Demand Designation:"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="19dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="10dp"
        android:text="UI Technical Lead"
        android:textColor="@color/black"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/tv7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="19dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="10dp"
        android:text="Demand Description:"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="19dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="10dp"
        android:text="A tech lead is required for VIATRIS account having expertise in Angular, ReactJs or SAPUI5..."
        android:textColor="@color/black"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/tv9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="19dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="10dp"
        android:text="Year of Experience:"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="19dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="10dp"
        android:text="8+ Years"
        android:textColor="@color/black"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/tv11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="19dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="10dp"
        android:text="Skills:"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="19dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="10dp"
        android:text="SAPUI5, Angular, ReactJS"
        android:textColor="@color/black"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/tv13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="19dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="10dp"
        android:text="Demand Date:"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="19dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="10dp"
        android:text="23rd August 2022"
        android:textColor="@color/black"
        android:textStyle="normal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnApprove"
            android:layout_width="165dp"
            android:layout_height="56dp"
            android:backgroundTint="@color/incture_theme"
            android:text="Approve"
            android:textColor="@color/white"
            android:textSize="15sp"
            tools:ignore="SpeakableTextPresentCheck">

        </Button>

        <Button
            android:id="@+id/btnReject"
            android:layout_width="165dp"
            android:layout_height="56dp"
            android:layout_marginStart="21dp"
            android:backgroundTint="@color/btnReject_color"
            android:text="Reject"
            android:textColor="@color/white"
            android:textSize="15sp"
            tools:ignore="SpeakableTextPresentCheck">

        </Button>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/etComment"
            android:layout_width="280dp"
            android:layout_height="match_parent"
            android:hint="Enter Text ..."
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            tools:ignore="SpeakableTextPresentCheck">

        </EditText>

        <Button
            android:id="@+id/btnCSubmit"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            app:cornerRadius="10dp"
            app:icon="@drawable/pic1"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:iconSize="30dp"
            tools:ignore="SpeakableTextPresentCheck">

        </Button>

    </LinearLayout>

</LinearLayout>